<hr>
<div class="row row-cols-2">
        <div class="col verticalhorizontal" style="background: rgba(0,0,0,0.5); width:100%; height: 100%;  display:flex; align-items: center; justify-content: center;">
            <div class="verticalhorizontal" style="background: transparent url(@Model.FirstPhoto) no-repeat center center; filter: blur(5px); width:45%; height: 130px;opacity: .7; z-index:1; position: absolute;"></div>
            <img style=" max-width:100%; max-height:130px;z-index:2; position: relative;" src="@Model.FirstPhoto" />
        </div>

        <div class="col">
            <div>
                <h2 class="">@Model.Name</h2>
                <p class="lead" style="min-height:30px">@if (@Model.Description.Length > 30)
                    {
                        @Model.Description.Substring(0, 30).Insert(30, "...");;
                    }
                    else
                    {
                        @Model.Description;
                    }
                </p>
                <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Product" asp-action="ViewProduct" asp-route-productId="@Model.ProductId">Перейти</a>
            </div>
        </div>
</div>
