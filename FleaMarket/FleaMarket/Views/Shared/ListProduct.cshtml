
    <div class="card shadow-sm mt-4" style="border-radius:10px" onmouseover="heart_visible('@Model.product.ProductId')" onmouseout="heart_anvisible('@Model.product.ProductId')">
        <div class="verticalhorizontal" style="background: rgba(0,0,0,0.5); width:100%; height: 250px;  display:flex; align-items: center; justify-content: center; border-top-left-radius:10px; border-top-right-radius:10px">
            <div class="verticalhorizontal" style="background: transparent url(@Model.product.FirstPhoto) no-repeat center center; filter: blur(5px); width:100%; height: 250px;opacity: .7; z-index:1; object-fit: cover; position: absolute;"></div>
            <img style=" max-width:100%; max-height:250px;z-index:2; position: relative;" src="@Model.product.FirstPhoto" />
        </div>

        <div class="card-body">
            <div class="order-md-2">
                <h2 class="">@Model.product.Name</h2>
                <p class="lead" style="min-height:30px">@if (@Model.product.Description.Length > 30)
                    {
                        @Model.product.Description.Substring(0, 30).Insert(30, "...");;
                    }
                    else
                    {
                        @Model.product.Description;
                    }
                </p>
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <p class="mt-3">@Model.product.Date.ToShortDateString()</p>
                <div class="btn-group">
                    @if(Model.favorite){
                        <button id="heart_@Model.product.ProductId" type="button" class="bg-transparent heart text-secondary border-0" style="visibility:hidden;" onclick="favorit_add(event,'@Model.product.ProductId')">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"></path>
                            </svg>
                        </button>
                    }
                    
                    <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Product" asp-action="ViewProduct" target="_blank" asp-route-productId="@Model.product.ProductId">Перейти</a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/favorit.js" asp-append-version="true"></script>
    
