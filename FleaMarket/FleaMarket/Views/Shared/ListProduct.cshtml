
    <div class="card shadow-sm mt-4">
        

        <div class="verticalhorizontal" style="background: rgba(0,0,0,0.5); width:100%; height: 250px;  display:flex; align-items: center; justify-content: center;">
            <div class="verticalhorizontal" style="background: transparent url(@Model.FirstPhoto) no-repeat center center; filter: blur(5px); width:100%; height: 250px;opacity: .7; z-index:1; position: absolute;"></div>
            <img style=" max-width:100%; max-height:250px;z-index:2; position: relative;" src="@Model.FirstPhoto" />
        </div>

        
        

        <div class="card-body">
            <div class="order-md-2">
                <h2 class="">@Model.Name</h2>
                <p class="lead" style="min-height:30px">@if (@Model.Description.Length > 30)
                    {
                        @Model.Description.Substring(0, 30).Insert(30, "...");;
                    }
                    else
                    {
                        @Model.Description;
                    }
                </p>
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Product" asp-action="ViewProduct" asp-route-productId="@Model.ProductId">Перейти</a>
                </div>
            </div>
        </div>
    </div>
