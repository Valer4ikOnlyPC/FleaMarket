@{
    string path = Model.FirstPhoto.Replace("img", "imgMin");

<div class="row row-cols-2 rounded shadow-sm border m-2"  onmouseover="heart_visible('@Model.ProductId')" onmouseout="heart_anvisible('@Model.ProductId')">
        <div class="col p-0 verticalhorizontal rounded"  style="width:100%; height: 100%;  display:flex; align-items: center; justify-content: center;">
            <img class="shadow rounded" style="width:100%; height:162px; object-fit: cover; z-index:2; position: relative;" src="@path" />
        </div>

        <div class="col position-relative mt-2">
            <h5 class="">@Model.Name</h5>
            <p class="lead" style="min-height:30px">@if (@Model.Description.Length > 30)
                {
                    @Model.Description.Substring(0, 20).Insert(20, "...");;
                }
                else
                {
                    @Model.Description;
                }
            </p>
            
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group p-2 justify-content-between align-items-center" style="position:absolute;bottom:0;right:0">
                    <button id="heart-min_@Model.ProductId" type="button" class="bg-transparent heart text-secondary border-0" style="visibility:hidden;" onclick="favorit_add(event,'@Model.ProductId')">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"></path>
                        </svg>
                    </button>
                    
                    <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Product" asp-action="ViewProduct" target="_blank" asp-route-productId="@Model.ProductId">Перейти</a>
                </div>
            </div>
        </div>
</div>
}
<script src="~/js/favorit.js" asp-append-version="true"></script>
