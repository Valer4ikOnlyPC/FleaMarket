@{
    ViewData["Title"] = "Страница входа";
}

    

    <div class="row align-items-center g-lg-5 py-5">
      <div class="col-lg-7 text-center text-lg-start">
        <h1 class="display-4 fw-bold lh-1 mb-3">Vertically centered hero sign-up form</h1>
        <p class="col-lg-10 fs-4">Below is an example form built entirely with Bootstrap’s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p>
      </div>
      <div class="col-md-10 mx-auto col-lg-5">
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="p-4 p-md-5 border rounded-3 bg-light">
          <div class="input-group mb-3">
            <span class="input-group-text" style="width: 10%">+7</span>
            <div class="form-floating" style="width: 90%">
              <input type="text" name="PhoneNumber" class="form-control" id="floatingInput" placeholder="Number">
              <label for="floatingInput">Номер телефона</label>
            </div>
          </div>
          

          <div class="form-floating mb-3">
            <input type="password" name="Password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Пароль</label>
          </div>
          <input class="w-100 btn btn-lg btn-primary" type="submit" value="Войти"/>
          <hr class="my-4">
          <small class="text-muted">Просто текст. Ещё не придумал что сдесь должно быть.</small>
        </form>
      </div>
    </div>