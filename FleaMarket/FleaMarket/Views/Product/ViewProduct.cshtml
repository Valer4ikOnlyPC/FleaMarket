@{
    ViewData["Title"] = @Model.Name;
}
  <p class="lead">@ViewBag.Category</p>
  <div id="myCarousel" class="carousel slide mb-3" style="background: gray; height: 500px; " data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" aria-label="0" class="active" aria-current="true"></button>
        @{
            if (@ViewBag.ImageCount > 0)
            {
                for (int i = 1; i <= @ViewBag.ImageCount; i++)
                {
                    <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="@i" aria-label="@i" class=""></button>
                }
            }
        }
    </div>


    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="mx-auto d-block" style="max-width:100%; height:500px" src="@ViewBag.Firstphoto" />
        </div>
        @{
            foreach (string link in @Model.Image)
            {
                 <div class="carousel-item">
                    <img class="mx-auto d-block" style="max-width:100%; height:500px" src="@link" />
                 </div>
            }
        }
      
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <div class="row featurette border-top pt-3">
      <div class="col-md-9">
        <div class="alert alert-success" style="background: rgb(250,250,250); color: black;" role="alert">
            <h2 class="featurette-heading">@Model.Name</h2>
            <hr>
            
            <div >@{
                    string[] words = @Model.Description.Split(new char[] { '\n' });
                    foreach (string s in words)
                    {
                        @s<br>
                    }
                }
            </div>
        </div>
        @{
            if (@ViewBag.Master)
            {
                <div class="d-flex justify-content-between align-items-center mb-5">
                  <div class="btn-group">
                    <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Product" asp-action="EditProduct" asp-route-productId="@Model.ProductId">Редактировать</a>
                    <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Product" asp-action="DeleteProduct" asp-route-productId="@Model.ProductId">Удалить</a>
                  </div>
                </div>
            }
        }
        <h4>Похожие товары</h4>
        
      </div>

      <div class="col-md-3">
        <div class="alert alert-success" style="background: rgb(250,250,250); color: black;" role="alert">
          <h4 class="featurette-heading pb-2">@ViewBag.User.Name</h4>
          <hr>
          <p>Рейтинг: @ViewBag.User.Rating</p>
          <p>Город: @ViewBag.City</p>
          <p>Кол-во обменов: </p>
            @{
                if (!@ViewBag.Master)
                {
                    <p><a class="btn btn-sm btn-outline-secondary" style="font-size:14pt" href="#">Предложить обмен</a></p>
                }
            }
        </div>
      </div>
    </div>


  